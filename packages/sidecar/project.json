{
  "name": "sidecar",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sidecar/src",
  "projectType": "library",
  "targets": {
    "build": {
      "command": ":",
      "dependsOn": ["^build", "build-webpack", "copy-assets"]
    },
    "copy-assets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp packages/sidecar/package.json dist/packages/sidecar/",
          "cp packages/sidecar/README.md dist/packages/sidecar/ || echo 'No README.md found'",
          "cp LICENSE dist/packages/sidecar/ || echo 'No LICENSE found'"
        ],
        "parallel": false
      },
      "dependsOn": ["build-webpack"]
    },
    "build-webpack": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/sidecar",
        "main": "packages/sidecar/src/index.js",
        "tsConfig": "packages/sidecar/tsconfig.lib.json",
        "webpackConfig": "packages/sidecar/webpack.config.js"
      },
      "dependsOn": ["^build"]
    },
    "publish": {
      "command": "ts-node ./tools/scripts/publish.ts sidecar",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/sidecar/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
